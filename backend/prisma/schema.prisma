generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resource {
  id            String          @id @default(cuid())
  title         String
  description   String?
  textContent   String?
  category      Category?       @relation(fields: [categoryId], references: [id])
  categoryId    String?
  tags          Tag[]           @relation("ResourceTags")
  user          User?           @relation(fields: [userId], references: [id])
  userId        String?
  files         File[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  FontMetadata  FontMetadata[]
  ImageMetadata ImageMetadata[]
}

model File {
  id            String         @id @default(cuid())
  url           String
  fileType      String
  fileRole      String
  resource      Resource       @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  resourceId    String
  fontMetadata  FontMetadata?
  imageMetadata ImageMetadata?
}

model Category {
  id        String     @id @default(cuid())
  name      String     @unique
  resources Resource[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Tag {
  id            String         @id @default(cuid())
  name          String         @unique
  resources     Resource[]     @relation("ResourceTags")
  colorPalettes ColorPalette[] @relation("ColorPaletteTags")
  codeTags      Code[]         @relation("CodeTags")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  role      String     @default("USER")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  resources Resource[]
}

model FontMetadata {
  id              String   @id @default(cuid())
  file            File?    @relation(fields: [fileId], references: [id])
  fileId          String   @unique
  resource        Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  resourceId      String
  family          String
  subfamily       String
  weight          Int
  isVariable      Boolean
  variableAxes    Json?
  isThumbnailFace Boolean  @default(false)
  createdAt       DateTime @default(now())
}

model ImageMetadata {
  id         String   @id @default(cuid())
  file       File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  fileId     String   @unique
  resource   Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  resourceId String
  width      Int
  height     Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ColorPalette {
  id        String       @id @default(cuid())
  name      String
  code      String
  tokens    ColorToken[]
  tags      Tag[]        @relation("ColorPaletteTags")
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model ColorToken {
  id        String       @id @default(cuid())
  value     String
  role      String?
  order     Int?
  palette   ColorPalette @relation(fields: [paletteId], references: [id], onDelete: Cascade)
  paletteId String
}

model Code {
  id          String     @id @default(cuid())
  title       String
  description String?
  codeFiles   CodeFile[] @relation("CodeFiles")
  tags        Tag[]      @relation("CodeTags")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model CodeFile {
  id           String        @id @default(cuid())
  title        String
  content      String        @db.Text
  language     String
  code         Code          @relation("CodeFiles", fields: [codeId], references: [id], onDelete: Cascade)
  codeId       String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  codeVersions CodeVersion[]
}

model CodeVersion {
  id         String   @id @default(cuid())
  code       CodeFile @relation(fields: [codeFileId], references: [id], onDelete: Cascade)
  codeFileId String
  content    String   @db.Text
  createdAt  DateTime @default(now())
}
